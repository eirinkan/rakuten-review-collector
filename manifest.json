{
  "manifest_version": 3,
  "name": "楽天市場レビュー収集",
  "version": "1.1.0",
  "description": "楽天市場の商品レビューを収集してスプレッドシートに保存またはCSVダウンロードします",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "downloads",
    "tabs"
  ],
  "host_permissions": [
    "https://review.rakuten.co.jp/*",
    "https://item.rakuten.co.jp/*",
    "https://ranking.rakuten.co.jp/*",
    "https://script.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://review.rakuten.co.jp/*",
        "https://item.rakuten.co.jp/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
